package org.wave.mvc.m.dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.stereotype.Component;
import org.wave.jpa.Band;
import org.wave.jpa.support.CollectionFactory;
import org.wave.mvc.exception.DAOCreateException;
import org.wave.mvc.exception.DAOReadException;

import com.mongodb.BasicDBObject;
import com.mongodb.DBCollection;

@Component
public class BandDAO extends DAO<Band>
{
	@Autowired
	MongoTemplate mongoTemplate;

	@Override
	public MongoTemplate getMongoTemplate()
	{
		return mongoTemplate;
	}
	
	public Band findBand() {
		return new Band("测试乐队1");
	}

}
