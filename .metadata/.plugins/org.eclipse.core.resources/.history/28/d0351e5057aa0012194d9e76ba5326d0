package org.wave.mvc.m.dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.stereotype.Component;
import org.wave.jpa.Band;
import org.wave.jpa.dao.exception.DAOCreateException;
import org.wave.jpa.dao.exception.DAOReadException;
import org.wave.jpa.support.CollectionFactory;

import com.mongodb.BasicDBObject;
import com.mongodb.DBCollection;

@Component
public class BandDAO implements DAO<Band>
{
	@Autowired
	MongoTemplate mongoTemplate;

	public void create(Band obj)
	{
		if (obj == null || !(obj instanceof Band)) {
			throw new DAOCreateException("缺少说明");
		}
		mongoTemplate.insert(obj);
	}

	public Band read(Band obj)
	{
		if (obj == null || !(obj instanceof BasicDBObject)) {
			throw new DAOReadException("缺少说明");
		}
		BasicDBObject b = (BasicDBObject) obj;
		return null;
	}

	public void update(Band obj)
	{}

	public void delete(Band obj)
	{}

}
