package tmp;

import java.util.ArrayList;
import java.util.List;

import org.wave.define.Inorganic;
import org.wave.define.Molecule;
import org.wave.define.Wave;

public class InitWorld
{
  public static void main(String[] argv) {
  	Molecule node = new Molecule("1", "node");
  	Molecule soul = new Molecule("2", "soul");
  	List<String> molecules = new ArrayList<String>();
  	molecules.add(node._id);
  	molecules.add(soul._id);

  	// U need a _id crypt, and the _id must a fuzzy variable;
  	Wave band = new Wave("1", molecules);

  	Molecule func = new Molecule("3", "func");
    
  	Inorganic newPlay = new Inorganic("1", "newPlay");
  	
  	band.molecules.add(newPlay.get_id());
  	
  	newPlay.organic(band, null);
  	
  }

}
