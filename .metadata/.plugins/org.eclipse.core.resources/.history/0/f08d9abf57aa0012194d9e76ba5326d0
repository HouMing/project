package org.wave.mvc.m.dao;

import org.springframework.data.mongodb.core.MongoTemplate;
import org.wave.jpa.Band;
import org.wave.jpa.dao.exception.DAOCreateException;

public abstract class DAO<T>
{
	void create(T obj)
	{
		if (obj == null || !(obj instanceof T)) {
			throw new DAOCreateException("缺少说明");
		}
		getMongoTemplate().insert(obj);
	}

	void delete(T obj)
	{

	}

	public abstract MongoTemplate getMongoTemplate();
}
